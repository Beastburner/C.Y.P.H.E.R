# C.Y.P.H.E.R Environment Configuration
# Copy this file to .env and fill in your values

# Network Configuration
ETHEREUM_MAINNET_RPC_URL=https://ethereum.publicnode.com
ETHEREUM_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon.llamarpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Infura Configuration (Optional)
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_project_secret

# Alchemy Configuration (Optional)
ALCHEMY_API_KEY=your_alchemy_api_key

# Contract Addresses (Sepolia Testnet)
CYPHER_TOKEN_ADDRESS=0x...
CYPHER_DEX_ADDRESS=0x...
CYPHER_STAKING_ADDRESS=0x...
PRIVACY_POOL_ADDRESS=0x...

# Contract Addresses (Mainnet - Leave empty for testnet only)
CYPHER_TOKEN_ADDRESS_MAINNET=
CYPHER_DEX_ADDRESS_MAINNET=
CYPHER_STAKING_ADDRESS_MAINNET=
PRIVACY_POOL_ADDRESS_MAINNET=

# API Keys
COINGECKO_API_KEY=your_coingecko_api_key
MORALIS_API_KEY=your_moralis_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Privacy Settings
DEFAULT_MIXING_POOL_SIZE=100
ENABLE_PRIVACY_MODE=true
ENABLE_TOR_ROUTING=false

# Security Configuration
ENABLE_BIOMETRIC_AUTH=true
REQUIRE_CONFIRMATION=true
AUTO_LOCK_TIMEOUT=300000

# Development Settings
DEBUG_MODE=false
ENABLE_FLIPPER=false
ENABLE_DEBUGGING=false

# Analytics (Optional)
ANALYTICS_ENABLED=false
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_api_key

# Push Notifications (Optional)
FCM_SERVER_KEY=your_firebase_server_key
APNS_CERTIFICATE_PATH=path_to_apns_cert

# Third-party Services
WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id
ONESHOT_API_KEY=your_oneshot_api_key

# ZK Proof Configuration
CEREMONY_PHASE2_URL=https://hermez.s3-eu-west-1.amazonaws.com/
TRUSTED_SETUP_PATH=./trusted_setup/

# Development URLs
DEV_SERVER_URL=http://localhost:3000
STAGING_SERVER_URL=https://staging.cypher-wallet.com
PROD_SERVER_URL=https://api.cypher-wallet.com

# Feature Flags
ENABLE_NFT_FEATURES=true
ENABLE_DEFI_FEATURES=true
ENABLE_CROSS_CHAIN=false
ENABLE_HARDWARE_WALLETS=false

# Gas Configuration
DEFAULT_GAS_LIMIT=21000
DEFAULT_GAS_PRICE=20000000000
MAX_FEE_PER_GAS=50000000000
MAX_PRIORITY_FEE_PER_GAS=2000000000

# Backup & Recovery
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
RECOVERY_SERVICE_URL=https://recovery.cypher-wallet.com

# Rate Limiting
API_RATE_LIMIT=100
TRANSACTION_RATE_LIMIT=10

# Logging
LOG_LEVEL=info
ENABLE_CRASH_REPORTING=true
SENTRY_DSN=your_sentry_dsn

# Testing
TEST_MNEMONIC=your_test_wallet_mnemonic_phrase_for_development_only
TEST_PRIVATE_KEY=your_test_private_key_for_development_only

# Note: Never commit this file with real values to version control!
